<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eshare_rl_tv_mirror"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F000">

    <ImageView
        android:id="@+id/eshare_iv_tv_mirror"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/eshare_iv_tv_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6000"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/eshare_iv_tv_shot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:elevation="8dp"
            android:padding="8dp"
            android:scaleType="fitXY" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/eshare_ib_tv_mirror_out"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/eshare_ic_out"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/eshare_ll_tv_mirror_tools"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/eshare_ic_mirror_bg"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/eshare_ib_tv_mirror_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:src="@drawable/eshare_ic_mirror_close" />

        <RelativeLayout
            android:id="@+id/ll_mirror_btn_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/eshare_ib_tv_mirror_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent"
                android:src="@drawable/eshare_ic_mirror_home" />

            <ImageButton
                android:id="@+id/eshare_ib_tv_mirror_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/eshare_ic_mirror_in" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/eshare_ib_tv_mirror_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/eshare_ic_mirror_back" />
    </LinearLayout>

</RelativeLayout>